<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".NewTaskActivity">

    <EditText
        android:id="@+id/edt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/ic_title_black_24dp"
        android:hint="title"
        android:inputType="textCapSentences"
        android:padding="16dp" />

    <EditText
        android:id="@+id/edt_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_title"
        android:background="@null"
        android:drawableLeft="@drawable/ic_description_black_24dp"
        android:hint="description"
        android:inputType="textCapSentences|textMultiLine"
        android:padding="16dp" />


    <TextView
        android:id="@+id/txt_datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_desc"
        android:drawableLeft="@drawable/ic_alarm_black_24dp"
        android:padding="16dp"
        android:text="start time"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_datetime"
        android:drawableLeft="@drawable/ic_colorize_black_24dp"
        android:padding="16dp"
        android:text="colour"
        android:textSize="18sp" />


    <com.rtugeek.android.colorseekbar.ColorSeekBar
        android:id="@+id/colorSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtColor"
        app:colorSeeds="@array/material_colors" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_new_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#4DB6AC"
            android:src="@drawable/ic_check_black_24dp" />
    </ScrollView>
</RelativeLayout>